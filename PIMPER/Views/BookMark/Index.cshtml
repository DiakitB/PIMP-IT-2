@model IEnumerable<UserBookMark>


    <div class="container">
        <div class="row">
			
        @foreach(var recipe in Model)
        {
			<div class="col-lg-3 col-md-6">
				<div class="row p-2">
					<div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
						<div class="card">
							<img src="@recipe.RecipeTable.ImageUrl" class="card-img-top rounded" />

							<div class="card-body">
								<div class="pl-1">
									<p>@recipe.RecipeTable.Name</p>
								</div>
							</div>
						</div>
						<div>
							<a class="btn btn-primary form-control" asp-controller="BookMark" asp-action="Details2" asp-route-Id="@recipe.Id">
								INGREDIENTS
							</a>
						</div>
						<br/>
						<div >
							<a class="btn btn-success form-control " asp-controller="BookMark" style="height:50px;" asp-route-Id="@recipe.Id" asp-action="Delete">Delete</a>
						</div>
					</div>
				</div>
			</div>
        }
        </div>
    </div>